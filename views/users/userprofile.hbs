<script>

    $("#passwordForm").validate({
        rules: {
            currentPassword: {
                required: true,
                minlength: 6
            },
            newPassword: {
                required: true,
                minlength: 6
            },
            repeatPassword: {
                required: true,
                equalTo: '#newPassword'
            }
        },
        messages: {
            currentPassword: {
                required: 'Enter your current password',
                minlength: 'Enter minimum of 6 characters'
            },
            newPassord: {
                required: 'Enter new password',
                minlength: 'Enter minimum of 6 characters'
            },
            repeatPassword: {
                required: 'Repeat the same password',
                equalTo: 'Repeat the same password'
            }
        }
    })
</script>