<body class="main">
  <div id="products">
  <section class="h-100 h-custom" style="background-color: #FFFFFF;">
    <div class="container-fluid py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-12">
          <div>
            {{#if orders}}
            <div class="card card-registration card-registration-2" style="border-radius: 15px;">
              {{else}}
              <div class="mt-5">
                {{/if}}
                <div id="orders" class="card-body p-0">
                  <div class="row g-0">
                    <div class="col-lg-12">

                      {{#if orders}}
                      <div class="p-5">
                        <div class="d-flex justify-content-center align-items-center my-4">

                          <h4 class="fw-bold mb-0 text-black mr-2">My Orders</h4>
                          {{!-- <i style="font-size: 1.5em;" class="text-danger fa fa-heart" aria-hidden="true"></i>
                          --}}
                          {{!-- <h6 id="cart-items" class="mb-0 text-muted"></h6> --}}
                        </div>
                        {{!-- <span id="cart-items" class="mb-0 text-muted"></span><span class="text-muted">&nbsp;
                          items</span> --}}
                        {{!--
                        <hr class="my-4"> --}}


                        {{!--
                        <hr class="my-4"> --}}

                        <div class="row mb-2 d-flex justify-content-center align-items-center">

                          <div class="table-responsive">

                            <table class="table">
                              <thead>
                                <tr>
                                  <th scope="col-3 col-md-3">Date</th>
                                  <th scope="col-3 col-md-2">Items</th>
                                  {{!-- <th scope="col">Quantity</th> --}}
                                  <th scope="col-3 col-md-2">Discount</th>
                                  <th scope="col-3 col-md-2">Total Amount</th>
                                  <th scope="col-4 col-md-3">Payment</th>
                                  <th scope="col-4 col-md-3">Status</th>
                                  <th scope="col-4 col-md-1">Order Details</th>
                                  <th scope="col-4 col-md-1">Cancel Order</th>
                                  <th scope="col-4 col-md-1"></th>
                                </tr>
                              </thead>
                              <tbody>
                                {{#each orders}}
                                <tr>
                                  {{!-- <div class="col-12"> --}}
                                    {{!-- <th scope="row">{{this.date}}</th> --}}
                                    {{!-- <div class="row d-flex justify-content-center align-items-center"> --}}
                                      <td scope="col-3 col-md-3">{{this.date}}</td>
                                      <td scope="col-3 col-md-2">{{itemsCount this.products}}</td>
                                      {{!-- <td>{{#each this.products}}{{this.quantity}} <br>{{/each}}</td> --}}
                                      {{!-- <td></td> --}}
                                      <td scope="col-3 col-md-2">
                                        {{#if discount}}₹ {{amountFormat this.discount}}
                                        {{else}}-{{/if}}
                                      </td>
                                      <td scope="col-3 col-md-2">₹ {{this.finalCost}}</td>
                                      <td scope="col-4 col-md-3">{{this.paymentMethod}}</td>
                                      <td scope="col-4 col-md-3">{{this.orderStatus}}</td>
                                      {{!-- <td scope="col-4 col-md-2">{{this.paymentStatus}}</td> --}}
                                      <td scope="col-4 col-md-2"><a type="button"
                                          class="btn btn-outline-info btn-sm" 
                                          {{!-- data-toggle="modal" data-target="#exampleModalCenter" --}}
                                          href="/view-order-details/{{this._id}}/{{this.address}}" >View Details</a></td>
                                      {{#ifEquals paymentStatus "Confirmed" ""}}
                                      <td scope="col-4 col-md-2">
                                        {{!-- <button type="button"
                                          class="btn text-white btn-secondary btn-sm" disabled></button> --}}
                                          </td><td></td>
                                      {{else}}
                                      <td scope="col-4 col-md-2"><button onclick="CancelOrder('{{this._id}}')" type="button"
                                          class="btn text-white btn-danger btn-sm">Cancel</button></td>

                                      {{!-- <td scope="col-4 col-md-2"><button type="button"
                                          class="btn btn-outline-danger btn-sm" data-toggle="modal"
                                          data-target="#exampleModalCenter">Cancel</button></td> --}}
                                      {{/ifEquals}}
                                      {{!-- <td><button type="button"
                                          class="btn btn-outline-danger btn-sm">Cancel</button></td> --}}
                                    {{!-- </div> --}}
                                </tr>
                                {{/each}}
                              </tbody>
                            </table>
                            

                          </div>
                        </div>
                      </div>
                      {{else}}

                      <head>
                        {{!-- <style>
                          .button:hover {
                            background-color: #15aac151;
                          }
                        </style> --}}
                        <!-- Plugins CSS -->
                        <link rel="stylesheet" href="/stylesheets/emptywishlist/css/plugins.css" />
